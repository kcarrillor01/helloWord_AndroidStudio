<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <!-- Root principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: logo + app name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_vertical|start">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="112dp"
                android:layout_height="125dp"
                android:contentDescription="@string/descripcionLogo"
                app:srcCompat="@drawable/logo"
                android:adjustViewBounds="true"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/agbalumo"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- DescripciÃ³n breve -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="12dp">

            <TextView
                android:id="@+id/descripcionLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/actor"
                android:text="@string/textoInicioSesion"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- BLOQUE PRINCIPAL: iconos a la izquierda + inputs a la derecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp">

            <!-- Iconos (izquierda) -->
            <ImageView
                android:id="@+id/iconosLogin"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/descripcionIconos"
                app:srcCompat="@drawable/iconoslogin"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginEnd="12dp" />

            <!-- Inputs (derecha) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextTextEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/textoUsuario"
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginBottom="12dp"
                   />

                <EditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/claveHint"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                     />
            </LinearLayout>
        </LinearLayout>

        <!-- Botones y link (abajo) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:text="@string/textoBotonLogin"
                android:textColor="@color/borders_color"
                android:textSize="22sp"
                app:strokeColor="@color/borders_color"
                app:strokeWidth="3dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLoginGoogle"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="12dp"
                android:fontFamily="serif"
                android:text="@string/loginGoogle"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:backgroundTint="@color/white"
                app:icon="@drawable/googleicono"
                app:iconPadding="0dp"
                app:iconSize="30dp"
                app:iconTint="@null" />

            <TextView
                android:id="@+id/recuperaClave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/actor"
                android:text="@string/recuperarPassword"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/registrateLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="@string/noTienesCuenta"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
